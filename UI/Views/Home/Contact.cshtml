@model BLL.Projection.BookStoreProjection

@{
  ViewBag.Title = "Contact";
}

<div class="row">
  <div class="offset-3 col-6">
    <h2 class="h2 text-center">Kontakt</h2>
    <hr class="mb-5" />
    <div class=" d-flex align-items-center justify-content-center">

      <div class="border border-1 border-secondary" style="width: 100%; padding: 20px 20px 20px 20px;">
        <h6>Adresa: @Model.Address</h6>
        <h6>Broj telefona: @Model.Telephone</h6>
        <h6>Broj mobitela: @Model.Mobile</h6>
        <h6>Email: @Model.Email</h6>
        <h6>OIB: 09195262064</h6>

        <table class="table table-bordered" style="width:100%">
          <thead class="fw-bold">Radno vrijeme:</thead>
          <tbody>
            <tr>
              <td>
                Pon - Pet
              </td>
              <td align="right">8:00 - 20:00</td>
            </tr>

            <tr>
              <td>
                Subota
              </td>
              <td align="right">8:00 - 15:00</td>
            </tr>

            <tr>
              <td>
                Nedjelja
              </td>
              <td align="right">Ne radimo</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>