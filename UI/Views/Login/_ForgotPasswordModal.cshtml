@model UI.Models.ForgotPasswordInputVM
<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width" />

</head>
<body>
  <div class="form-horizontal">
    <div class="modal-header">
      <h4 class="modal-title" id="myModalLabel">Obnova zaporke</h4>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
      @using (Html.BeginForm(actionName: "RequestResetPassword", controllerName: "Login")) {
        <p class="text-secondary"> Unesite E-mail zatim ako je email povezan sa korisničkim računom na email će vam biti poslane upute i link za obnavljanje zaporke​</p>
        <div class="form-group mb-3">
          @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-4" })
          @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
          @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
        <button class="float-start" type="submit" value="Pošalji">Pošalji</button>
      }
    </div>
  </div>
</body>
</html>
