@model UI.Models.ResetPasswordVM
@{
  Layout = null;
}

<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width" />
  <title>Obnova zaporke</title>
  @Styles.Render("~/Content/css")
</head>
<body>

  <div class="container mt-5">
    <div class="row">
      <h4>Obnova zaporke</h4>
      <hr />
      <div class="offset-3 col-6">
        @using (Html.BeginForm(actionName: "ResetPassword", controllerName: "Account", method: FormMethod.Post)) {
          @Html.AntiForgeryToken()

          @Html.ValidationSummary()

          @Html.HiddenFor(expression: model => model.GUID)

          <div class="mt-3">
            @Html.LabelFor(expression: model => model.Password, htmlAttributes: new { @class = "form-label" })
            @Html.PasswordFor(expression: model => model.Password, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(expression: model => model.Password)
          </div>

          <div class="mt-3">
            @Html.LabelFor(expression: model => model.ConfirmPassword, htmlAttributes: new { @class = "form-label" })
            @Html.PasswordFor(expression: model => model.ConfirmPassword, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(expression: model => model.ConfirmPassword)
          </div>

          <div class="d-flex justify-content-end">
            @Html.ActionLink(linkText: "Početna",
                             actionName: "Index",
                             controllerName: "Home",
                             routeValues: null,
                             htmlAttributes: new {
                               @class = "btn btn-outline-secondary"
                             })
            <input type="submit" value="Promijeni zaporku" class="btn btn-primary" />
          </div>
        }
      </div>
    </div>
  </div>


  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/bundles/jqueryval")
  @Scripts.Render("~/bundles/bootstrap")
</body>
</html>